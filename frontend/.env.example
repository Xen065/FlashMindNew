# ============================================
# FlashMind Frontend Environment Variables
# ============================================
# Copy this file to .env.local for local development
# Copy to .env.production for production build

# ============================================
# Backend API URL
# ============================================
# Local development:
REACT_APP_API_URL=http://localhost:5000

# Production (Render):
# REACT_APP_API_URL=https://flashmind-backend.onrender.com

# Custom domain:
# REACT_APP_API_URL=https://api.yourdomain.com

# ============================================
# Application Configuration
# ============================================
# App name (displayed in browser tab)
REACT_APP_NAME=FlashMind

# App version
REACT_APP_VERSION=1.0.0

# ============================================
# Feature Flags (Optional)
# ============================================
# Enable/disable features
# REACT_APP_ENABLE_REGISTRATION=true
# REACT_APP_ENABLE_SOCIAL_LOGIN=false
# REACT_APP_ENABLE_DARK_MODE=true

# ============================================
# External Services (Optional - Future Use)
# ============================================
# Google Analytics
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry for error tracking
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Stripe for payments
# REACT_APP_STRIPE_PUBLIC_KEY=pk_test_xxxxx

# ============================================
# API Endpoints (Advanced Configuration)
# ============================================
# Override specific API endpoints if needed
# REACT_APP_AUTH_ENDPOINT=${REACT_APP_API_URL}/api/auth
# REACT_APP_COURSES_ENDPOINT=${REACT_APP_API_URL}/api/courses
# REACT_APP_CARDS_ENDPOINT=${REACT_APP_API_URL}/api/cards

# ============================================
# Development Only
# ============================================
# Skip preflight check (if needed)
# SKIP_PREFLIGHT_CHECK=true

# Disable ESLint during build
# DISABLE_ESLINT_PLUGIN=false

# ============================================
# NOTES:
# ============================================
# 1. All variables MUST start with REACT_APP_
# 2. Changes require app restart (npm start)
# 3. Production values are embedded in build
# 4. Never store secrets in frontend .env
# 5. For Render, set in Static Site environment variables
# ============================================
