# ============================================
# FlashMind Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flashmind
DB_USER=postgres
DB_PASSWORD=your_database_password

# For Render deployment, use the values from your Render PostgreSQL database:
# DB_HOST=dpg-xxxxx.oregon-postgres.render.com
# DB_NAME=flashmind
# DB_USER=flashmind_user
# DB_PASSWORD=<from Render dashboard>

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=5000

# For production (Render):
# NODE_ENV=production
# PORT=10000

# ============================================
# JWT (JSON Web Token) Configuration
# ============================================
# Secret key for signing JWT tokens
# IMPORTANT: Use a long, random string (minimum 32 characters)
# Generate with: openssl rand -base64 64
JWT_SECRET=your_very_long_random_secret_key_here_change_this_in_production

# Token expiration time
# Examples: 1h, 24h, 7d, 30d
JWT_EXPIRES_IN=7d

# ============================================
# Frontend Configuration (CORS)
# ============================================
# The URL of your frontend application
# Local development:
FRONTEND_URL=http://localhost:3000

# Production (Render):
# FRONTEND_URL=https://flashmind-frontend.onrender.com

# Custom domain:
# FRONTEND_URL=https://www.yourdomain.com

# ============================================
# File Upload Configuration (Optional)
# ============================================
# Maximum file size for uploads (in bytes)
# Default: 5MB
MAX_FILE_SIZE=5242880

# Allowed file types for upload
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Upload directory
UPLOAD_DIR=uploads

# ============================================
# Email Configuration (Optional - Future Use)
# ============================================
# SMTP settings for email notifications
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-specific-password
# EMAIL_FROM=FlashMind <noreply@flashmind.com>

# ============================================
# Rate Limiting (Optional - Recommended for Production)
# ============================================
# Maximum requests per window per IP
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# ============================================
# Logging Configuration
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# Session Configuration (Optional)
# ============================================
# SESSION_SECRET=another_random_secret_for_sessions
# SESSION_EXPIRES_IN=86400000  # 24 hours in milliseconds

# ============================================
# External Services (Optional - Future Use)
# ============================================
# AWS S3 for file storage
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=flashmind-uploads
# AWS_REGION=us-east-1

# Cloudinary for image storage
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# Redis for caching (if using)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# ============================================
# Feature Flags (Optional)
# ============================================
# ENABLE_REGISTRATION=true
# ENABLE_EMAIL_VERIFICATION=false
# ENABLE_SOCIAL_LOGIN=false
# MAINTENANCE_MODE=false

# ============================================
# Security Configuration
# ============================================
# CORS settings
# CORS_ORIGIN=* # Use specific domains in production
# CORS_CREDENTIALS=true

# Trust proxy (for Render/Heroku)
# TRUST_PROXY=true

# ============================================
# Development Only
# ============================================
# Enable SQL query logging
# SQL_LOGGING=true

# Enable debug mode
# DEBUG=true

# ============================================
# NOTES FOR RENDER DEPLOYMENT:
# ============================================
# 1. Do not commit this file with real values
# 2. Set environment variables in Render dashboard
# 3. Use Render's database connection details
# 4. Generate strong JWT_SECRET for production
# 5. Set FRONTEND_URL to your Render frontend URL
# 6. Set NODE_ENV to 'production'
# ============================================
